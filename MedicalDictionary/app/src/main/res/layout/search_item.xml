<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/rec_background">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F7F8"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/eng_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="@dimen/title"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    android:text="영어"/>
                <TextView
                    android:id="@+id/kor_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="@dimen/sub_title"
                    android:textColor="@color/black"
                    android:text="한글"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/record_ibn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/unselect_heart"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/explain_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:background="#EFD7D7"
                android:visibility="gone"
                android:includeFontPadding="false"
                android:scrollbars="vertical"
                android:scrollbarSize="5dp"
                android:textSize="@dimen/explain"
                android:textColor="@color/black"
                android:text="설명"/>
            <ImageButton
                android:id="@+id/listen_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/sound"
                android:background="@android:color/transparent">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>